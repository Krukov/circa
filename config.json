{
  "storages": {
    "r": "redis://localhost/0?timeout=1&pool_size=2"
  },
  "rules": {
    "/posts/{id}": {
      "posts-{id}:key": {
        "ttl": "1m"
      },
      "invalid": {
        "methods": ["POST", "DELETE", "PUT", "PATCH"],
        "type": "invalidation",
        "key": "posts-{id}:key"
      }
    },
    "/*": {
      "{request_path}:fail": {
        "ttl": "1m",
        "type": "fail"
      }
    }
  },
  "options": {
    "host": "http://localhost:8888",
    "timeout": "1m30s"
  }
}