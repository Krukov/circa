{
  "storages": {
    "main": "redis://localhost/2",
    "mem": "mem://"
  },
  "rules": {
    "/posts/{id}": [
      {
        "kind": "idempotency",
        "key": "post-ide-{R:body|hash}",
        "ttl": "10s",
        "methods": ["POST"]
      },
      {
        "key": "posts-{id}:key",
        "kind": "early",
        "storage": "mem",
        "early_ttl": "1m",
        "ttl": "10m"
      },
      {
        "kind": "invalidate",
        "methods": ["POST", "DELETE", "PUT", "PATCH"],
        "key": "posts-{id}:key"
      }
    ],
    "/posts/3": [
      {
        "kind": "skip",
        "methods": ["GET", "POST", "DELETE", "PUT", "PATCH"]
      }
    ],
    "hit/posts": [
      {
        "kind": "hit",
        "ttl": "10m",
        "key": "posts:hit:key",
        "hits": 100,
        "update_after": 50
      },
      {
        "kind": "proxy",
        "path": "/posts/"
      }
    ],
    "/static/*" : [
      {
        "kind": "cache",
        "ttl": "1m",
        "key": "{R:full_path}"
      }
    ],
    "/*": [
      {
        "kind": "request_id",
        "methods": ["GET", "POST", "DELETE", "PUT", "PATCH"],
        "skip_return": true
      },
      {
        "kind": "retry",
        "methods": ["GET", "PATCH"],
        "backoff": "1s",
        "count": 2
      }

    ]
  },
  "options": {
    "host": "http://localhost:8000",
    "timeout": "1m30s"
  }
}